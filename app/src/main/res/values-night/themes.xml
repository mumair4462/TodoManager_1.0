<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/primary_lite</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/white</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#474646</item>
    </style>

    <style name="Table_header">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical" tools:targetApi="o">5dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">20dp</item>
    </style>

    <style name="Table_row">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#252323</item>
        <item name="android:background">@drawable/border_black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical" tools:targetApi="o">4dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">20dp</item>
    </style>

    <style name="Days_style">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/circle_no_selected</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding" >10dp</item>
        <item name="android:layout_marginHorizontal" tools:ignore="DuplicateDefinition,NewApi">2dp</item>
    </style>

    <style name="Primary_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/primary</item>
        <item name="android:paddingVertical" tools:ignore="DuplicateDefinition,NewApi">10dp</item>
        <item name="android:paddingHorizontal" tools:ignore="DuplicateDefinition,NewApi">20dp</item>
    </style>

    <style name="Secondary_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/primary_lite_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_primary_border</item>
        <item name="android:paddingVertical" tools:ignore="DuplicateDefinition,NewApi">10dp</item>
        <item name="android:paddingHorizontal" tools:ignore="DuplicateDefinition,NewApi">20dp</item>
    </style>


    <!-- Task Event Style   -->
    <style name="TaskEventInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColorHint">@color/primary_lite</item>
        <item name="android:background">@drawable/task_event_input_style</item>
        <item name="android:paddingVertical" tools:ignore="DuplicateDefinition,NewApi">10dp</item>
        <item name="android:paddingHorizontal" tools:ignore="DuplicateDefinition,NewApi">20dp</item>
    </style>

    <style name="TaskEventLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_lite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_rounded_corners</item>
    </style>

</resources>